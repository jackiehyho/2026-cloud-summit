---
interface Props {
	content: {
		heading: string;
		description: string;
	};
}

const { content } = Astro.props;
---

<section class="summit-summary">
	<div class="summary-container">
		<div class="vertical-text">EVENT<br/>HIGHLIGHTS</div>
		<div class="content-column">
			<div class="bento-grid">
				<!-- Row 1-3, Col 1: Photo (1x3) -->
				<div class="bento-item bento-photo bento-1x3">
					<img src="/images/event-photos/_DSC5343.png" alt="Cloud Summit Event" />
				</div>

				<!-- Row 1-2, Col 2-4: Green Charity (3x2) -->
				<div class="bento-item bento-green bento-3x2">
					<h3>$10,000+</h3>
					<p>Raised for Charity to date</p>
				</div>

				<!-- Row 1-2, Col 5-6: Photo (2x2) -->
				<div class="bento-item bento-photo bento-2x2">
					<img src="/images/event-photos/_DSC5450.png" alt="Cloud Summit Event" />
				</div>

				<!-- Row 3, Col 2: Yellow (1x1) -->
				<div class="bento-item bento-yellow"></div>

				<!-- Row 3-5, Col 3-4: Dark Center Cloud Summit (2x3) -->
				<div class="bento-item bento-dark bento-2x3">
					<img src="/images/cloud-summit-stack-logo.svg" alt="Cloud Summit" class="bento-logo" />
				</div>

				<!-- Row 3-4, Col 5-6: Blue Attendees (2x2) -->
				<div class="bento-item bento-blue bento-2x2">
					<h3>800+</h3>
					<p>In-Person Attendees</p>
				</div>

				<!-- Row 4-5, Col 1-2: Pink Speakers (2x2) -->
				<div class="bento-item bento-pink bento-2x2">
					<h3>19</h3>
					<p>Speakers</p>
				</div>

				<!-- Row 5-7, Col 5-6: Photo (2x3) -->
				<div class="bento-item bento-photo bento-2x3">
					<img src="/images/event-photos/_DSC5457.png" alt="Cloud Summit Event" />
				</div>

				<!-- Row 6-7, Col 1-2: Photo (2x2) -->
				<div class="bento-item bento-photo bento-2x2">
					<img src="/images/event-photos/_DSC5559.png" alt="Cloud Summit Event" />
				</div>

				<!-- Row 6-7, Col 3-4: Red Sponsors (2x2) -->
				<div class="bento-item bento-red bento-2x2">
					<h3>12+</h3>
					<p>Sponsors & Communities</p>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.summit-summary {
		background: black;
		color: white;
		padding: 3rem 1.5rem;
		position: relative;
		overflow: hidden;
	}

	.summary-container {
		max-width: 1440px;
		margin: 0 auto;
		padding: 0 1.5rem;
		position: relative;
	}

	.vertical-text {
		font-family: 'Doto', sans-serif;
		font-size: 1.5rem;
		font-weight: 700;
		color: white;
		opacity: 0.7;
		writing-mode: horizontal-tb;
		transform: none;
		white-space: nowrap;
		letter-spacing: 0.1em;
		line-height: 0.8;
		margin-bottom: 2rem;
	}

	.content-column {
		width: 100%;
	}

	.bento-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
		margin-top: 2rem;
	}


	.bento-item {
		background: rgba(61, 120, 171, 0.2);
		border: 1px solid rgba(61, 120, 171, 0.3);
		border-radius: 1rem;
		padding: 1.5rem;
		transition: transform 0.2s, background 0.2s;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		min-height: 100px;
	}

	.bento-item.bento-photo {
		padding: 0;
	}

	.bento-photo:hover {
		background: rgba(61, 120, 171, 0.5);
		transform: translateY(-4px);
	}

	.bento-item h3 {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 2rem;
		margin: 0 0 0.5rem 0;
		color: white;
		line-height: 1;
	}

	.bento-item p {
		margin: 0;
		font-size: 1rem;
		color: white;
		line-height: 1.3;
	}

	.bento-logo {
		max-width: 120px;
		height: auto;
		margin-bottom: 1rem;
	}

	.bento-date {
		font-size: 1.25rem;
		margin-bottom: 0.25rem;
	}

	/* Color variants */
	.bento-green {
		background: rgb(168, 251, 90);
	}

	.bento-green:hover {
		background: rgb(168, 251, 90);
	}

	.bento-green h3,
	.bento-green p {
		color: black;
	}

	.bento-yellow {
		background: rgb(255, 193, 77);
	}

	.bento-yellow:hover {
		background: rgb(255, 193, 77);
	}

	.bento-dark {
		background: rgb(45, 45, 45);
	}

	.bento-dark:hover {
		background: rgb(45, 45, 45);
	}

	.bento-blue {
		background: rgb(61, 120, 171);
	}

	.bento-blue:hover {
		background: rgb(61, 120, 171);
	}

	.bento-pink {
		background: rgb(232, 121, 249);
	}

	.bento-pink:hover {
		background: rgb(232, 121, 249);
	}

	.bento-red {
		background: rgb(251, 113, 133);
	}

	.bento-red:hover {
		background: rgb(251, 113, 133);
	}

	.bento-photo {
		background: rgba(61, 120, 171, 0.4);
		border: 2px solid rgba(61, 120, 171, 0.3);
		padding: 0;
		overflow: hidden;
	}

	.bento-photo img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	/* Span classes */
	.bento-1x3 {
		grid-column: span 1;
		grid-row: span 3;
	}

	.bento-3x2 {
		grid-column: span 3;
		grid-row: span 2;
	}

	.bento-2x2 {
		grid-column: span 2;
		grid-row: span 2;
	}

	.bento-2x3 {
		grid-column: span 2;
		grid-row: span 3;
	}

	@media (min-width: 769px) {
		.summit-summary {
			padding: 4rem 2rem;
		}

		.summary-container {
			padding: 0 2rem;
		}

		.vertical-text {
			font-size: 6rem;
			writing-mode: vertical-rl;
			transform: rotate(180deg);
			position: absolute;
			left: -10rem;
			bottom: 0;
			margin-bottom: 0;
		}

		.content-column {
			width: 100%;
			position: relative;
		}

		.bento-grid {
			grid-template-columns: repeat(6, 1fr);
			margin-top: 0;
		}

		.bento-item {
			padding: 2rem;
			min-height: 150px;
		}

		.bento-item.bento-photo {
			padding: 0;
		}

		.bento-item h3 {
			font-size: 3rem;
		}

		.bento-item p {
			font-size: 1.125rem;
		}

		.bento-logo {
			max-width: 180px;
		}

		.bento-date {
			font-size: 1.5rem;
		}
	}
</style>
