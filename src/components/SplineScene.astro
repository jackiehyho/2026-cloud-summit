---
interface Props {
	url?: string;
	height?: string;
}

const { url = '', height = '600px' } = Astro.props;
---

<section class="spline-section">
	<div class="spline-container">
		{url ? (
			<iframe
				src={url}
				title="Spline 3D Scene"
				class="spline-iframe"
				style={`height: ${height};`}
				frameborder="0"
				allow="fullscreen"
			></iframe>
		) : (
			<div class="spline-placeholder">
				<p>Add your Spline scene URL</p>
			</div>
		)}
	</div>
</section>

<style>
	.spline-section {
		width: 100%;
		background: white;
		padding: 4rem 2rem;
	}

	@media (prefers-color-scheme: dark) {
		.spline-section {
			background: #0a0a0a;
		}
	}

	.spline-container {
		max-width: 1400px;
		margin: 0 auto;
		width: 100%;
	}

	.spline-iframe {
		width: 100%;
		border: none;
		border-radius: 1rem;
		overflow: hidden;
		display: block;
	}

	.spline-placeholder {
		width: 100%;
		height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(0, 0, 0, 0.05);
		border-radius: 1rem;
		border: 2px dashed rgba(0, 0, 0, 0.2);
	}

	@media (prefers-color-scheme: dark) {
		.spline-placeholder {
			background: rgba(255, 255, 255, 0.05);
			border-color: rgba(255, 255, 255, 0.2);
		}
	}

	.spline-placeholder p {
		color: rgba(0, 0, 0, 0.5);
		font-size: 1.125rem;
	}

	@media (prefers-color-scheme: dark) {
		.spline-placeholder p {
			color: rgba(255, 255, 255, 0.5);
		}
	}

	@media (max-width: 768px) {
		.spline-section {
			padding: 2rem 1rem;
		}

		.spline-iframe {
			height: 400px !important;
		}

		.spline-placeholder {
			height: 400px;
		}
	}
</style>


