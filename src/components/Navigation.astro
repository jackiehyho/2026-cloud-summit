---
import CitySelector from './CitySelector.astro';
---

<nav class="nav">
	<div class="nav-container">
		<a href="/" class="nav-logo">
			<img src="/images/Cloud-summit-logo.svg" alt="Cloud Summit 2026" class="nav-logo-img" />
		</a>
		<div class="nav-right">
			<ul class="nav-links">
				<li><a href="/">Home</a></li>
				<li><a href="#about">About</a></li>
				<li><a href="#speakers">Speakers</a></li>
				<li><a href="#sponsors">Sponsors</a></li>
				<li><a href="#volunteer">Volunteer</a></li>
			</ul>
			<CitySelector />
			<a href="#register" class="nav-cta">Register</a>
		</div>
	</div>
</nav>

<style>
	.nav {
		position: sticky;
		top: 0;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		z-index: 100;
	}

	@media (prefers-color-scheme: dark) {
		.nav {
			background: rgba(0, 0, 0, 0.95);
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		}
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.nav-logo {
		text-decoration: none;
		color: inherit;
		display: flex;
		align-items: center;
	}

	.nav-logo-img {
		height: 2.5rem;
		width: auto;
		display: block;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		list-style: none;
		margin: 0;
		padding: 0;
		align-items: center;
	}

	.nav-links a {
		text-decoration: none;
		color: inherit;
		font-weight: 500;
		transition: opacity 0.2s;
	}

	.nav-links a:hover {
		opacity: 0.7;
	}

	.nav-cta {
		background: rgb(61, 120, 171);
		color: white !important;
		padding: 0.5rem 1.5rem;
		border-radius: 0.5rem;
		transition: background 0.2s;
	}

	.nav-cta:hover {
		background: rgb(45, 90, 130);
		opacity: 1;
	}

	@media (max-width: 768px) {
		.nav-container {
			flex-direction: column;
			gap: 1rem;
		}

		.nav-right {
			flex-direction: column;
			gap: 1rem;
			width: 100%;
		}

		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem;
		}
	}
</style>
