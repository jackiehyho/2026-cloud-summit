---
interface Props {
	content: {
		heading: string;
		description: string;
	};
}

const { content } = Astro.props;
---

<section class="what-is-cloud-summit">
	<div class="what-container">
		<h2 class="what-heading">
			<span class="heading-prefix">What's </span>
			{content.heading}
		</h2>
		<p class="what-description">{content.description}</p>
	</div>
</section>

<style>
	.what-is-cloud-summit {
		background: black;
		color: white;
		padding: 4rem 1.5rem;
	}

	.what-container {
		max-width: 1440px;
		margin: 0 auto;
		text-align: center;
	}

	.what-heading {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 2.5rem;
		font-weight: 400;
		margin: 0 0 1.5rem 0;
		line-height: 1.2;
		letter-spacing: 0.02em;
		color: rgb(61, 120, 171);
	}

	.heading-prefix {
		color: white;
		font-family: 'Squada One', system-ui, sans-serif;
	}

	.what-description {
		font-size: 1.5rem;
		font-weight: 600;
		line-height: 1.6;
		margin: 0;
		opacity: 0.7;
	}

	@media (min-width: 769px) {
		.what-is-cloud-summit {
			padding: 6rem 2rem;
		}

		.what-heading {
			font-size: 4rem;
		}

		.what-description {
			font-size: 2rem;
		}
	}
</style>
