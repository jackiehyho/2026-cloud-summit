---
interface Props {
	content: {
		copyright: string;
		links?: Array<{ text: string; href: string }>;
		social?: Array<{ name: string; url: string }>;
		pressReleases?: Array<{ text: string; href: string }>;
		previousYears?: Array<{ text: string; href: string }>;
	};
}

const { content } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="footer-container">
		<div class="footer-top">
			<div class="footer-column footer-brand">
				<div class="footer-logo">
					<img src="/images/Cloud-summit-logo.svg" alt="Cloud Summit 2026" />
				</div>
				{content.social && (
					<div class="footer-social">
						{content.social.map(social => (
							<a href={social.url} target="_blank" rel="noopener noreferrer" aria-label={social.name}>
								{social.name === 'Instagram' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
								)}
								{social.name === 'LinkedIn' && (
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
								)}
							</a>
						))}
					</div>
				)}
			</div>

			<div class="footer-column">
				<h4 class="footer-heading">Navigation</h4>
				{content.links && (
					<nav class="footer-nav">
						{content.links.map(link => (
							<a href={link.href}>{link.text}</a>
						))}
					</nav>
				)}
			</div>

			<div class="footer-column">
				<h4 class="footer-heading">Press</h4>
				{content.pressReleases && (
					<nav class="footer-nav">
						{content.pressReleases.map(link => (
							<a href={link.href} target="_blank" rel="noopener noreferrer">{link.text}</a>
						))}
					</nav>
				)}
			</div>

			<div class="footer-column">
				<h4 class="footer-heading">Previous Years</h4>
				{content.previousYears && (
					<nav class="footer-nav">
						{content.previousYears.map(link => (
							<a href={link.href} target="_blank" rel="noopener noreferrer">{link.text}</a>
						))}
					</nav>
				)}
			</div>
		</div>

		<div class="footer-bottom">
			<p class="footer-copyright">
				Â© {currentYear} {content.copyright}
			</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: black;
		color: white;
		padding: 3rem 1.5rem 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-top {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.footer-column {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.footer-brand {
		align-items: center;
		text-align: center;
	}

	.footer-logo img {
		height: 2.5rem;
		width: auto;
	}

	.footer-heading {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 1.25rem;
		margin: 0;
		color: rgb(255, 193, 77);
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-nav a {
		color: white;
		text-decoration: none;
		font-size: 0.875rem;
		opacity: 0.7;
		transition: opacity 0.2s;
	}

	.footer-nav a:hover {
		opacity: 1;
	}

	.footer-social {
		display: flex;
		gap: 1rem;
	}

	.footer-social a {
		color: white;
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-social a:hover {
		color: rgb(61, 120, 171);
	}

	.footer-social svg {
		width: 24px;
		height: 24px;
	}

	.footer-bottom {
		width: 100%;
		text-align: center;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.footer-copyright {
		margin: 0;
		font-size: 0.875rem;
		opacity: 0.7;
	}

	@media (min-width: 769px) {
		.footer {
			padding: 4rem 2rem 2rem;
		}

		.footer-top {
			grid-template-columns: 2fr 1fr 1fr 1fr;
			gap: 3rem;
		}

		.footer-brand {
			align-items: flex-start;
			text-align: left;
		}

		.footer-logo img {
			height: 3rem;
		}

		.footer-heading {
			font-size: 1.5rem;
		}

		.footer-nav a {
			font-size: 1rem;
		}

		.footer-copyright {
			font-size: 1rem;
		}
	}
</style>
