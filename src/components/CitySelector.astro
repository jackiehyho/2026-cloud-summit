<div class="city-selector">
	<label for="city-select" class="city-label">Location:</label>
	<select id="city-select" class="city-select">
		<option value="vancouver">Vancouver</option>
		<option value="toronto">Toronto</option>
	</select>
</div>

<script>
	import { getCityStore } from '../lib/cityStore';
	
	function initCitySelector() {
		const cityStore = getCityStore();
		const select = document.getElementById('city-select') as HTMLSelectElement;
		
		if (select) {
			// Initialize store
			cityStore.init();
			
			// Set initial value
			select.value = cityStore.getCity();
			
			// Update store when selection changes
			select.addEventListener('change', (e) => {
				const target = e.target as HTMLSelectElement;
				cityStore.setCity(target.value as 'vancouver' | 'toronto');
			});
			
			// Update select when store changes
			cityStore.subscribe((city) => {
				select.value = city;
			});
		}
	}

	// Run when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initCitySelector);
	} else {
		initCitySelector();
	}
</script>

<style>
	.city-selector {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.city-label {
		font-size: 1rem;
		font-weight: 500;
		color: inherit;
	}

	.city-select {
		padding: 0.5rem 1rem;
		border: 1px solid rgba(0, 0, 0, 0.2);
		border-radius: 0.375rem;
		background: white;
		color: inherit;
		font-size: 0.875rem;
		font-weight: 500;
		cursor: pointer;
		transition: border-color 0.2s;
	}

	@media (prefers-color-scheme: dark) {
		.city-select {
			background: rgba(255, 255, 255, 0.1);
			border-color: rgba(255, 255, 255, 0.2);
		}
	}

	.city-select:hover {
		border-color: rgba(0, 0, 0, 0.4);
	}

	@media (prefers-color-scheme: dark) {
		.city-select:hover {
			border-color: rgba(255, 255, 255, 0.4);
		}
	}

	.city-select:focus {
		outline: none;
		border-color: rgb(61, 120, 171);
		box-shadow: 0 0 0 3px rgba(61, 120, 171, 0.1);
	}
</style>
