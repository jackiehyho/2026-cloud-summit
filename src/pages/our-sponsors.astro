---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import PastSponsors from '../components/PastSponsors.astro';
import { navigationContent, footerContent, sponsorshipSponsorsContent } from '../lib/content';

const sponsorshipTiers = [
	{
		name: 'Bronze',
		price: '$2,500',
		color: 'rgb(251, 113, 133)',
		benefits: [
			'Exhibitor table',
			'3 conference passes',
			'Logo on website',
			'Social media mentions',
		],
	},
	{
		name: 'Silver',
		price: '$5,000',
		color: 'rgb(61, 120, 171)',
		benefits: [
			'Standard booth location',
			'5 conference passes',
			'Logo on website',
			'Lightning talk opportunity',
			'Social media mentions',
		],
	},
	{
		name: 'Gold',
		price: '$7,500',
		color: 'rgb(255, 193, 77)',
		benefits: [
			'Premium booth location',
			'7 conference passes',
			'Logo on website and programs',
			'Workshop speaking opportunity',
			'Social media mentions',
			'VIP networking session access',
		],
	},
	{
		name: 'Platinum',
		price: '$10,000',
		color: 'rgb(230, 148, 255)',
		benefits: [
			'Premier booth location',
			'10 conference passes',
			'Logo on all marketing materials',
			'Keynote speaking opportunity',
			'Social media promotion',
			'Dedicated email blast',
			'VIP networking session access',
		],
	},
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Squada+One&family=Noto+Sans:wght@400;500;600;700&family=Doto:wght@100..900&display=swap" rel="stylesheet" />
		<title>Sponsorship Info - Cloud Summit 2026</title>
	</head>
	<body>
		<Navigation content={navigationContent} />

		<main class="sponsorship-page">
			<!-- Hero Section -->
			<section class="sponsorship-hero">
				<div class="hero-container">
					<h1 class="hero-title">Event Sponsorship</h1>
					<p class="hero-subtitle">Partner with Canada's Premier Multi-Cloud Event</p>
					<p class="hero-description">
						Reach over 1,000+ cloud professionals and decision-makers at Cloud Summit 2026.
						Showcase your brand at the largest gathering of AWS, Azure, Google Cloud, and IBM Cloud experts.
					</p>
				</div>
			</section>

			<!-- Why Sponsor -->
			<section class="why-sponsor">
				<div class="why-container">
					<h2 class="section-heading">
						<span class="heading-prefix">Why </span>
						Sponsor Cloud Summit?
					</h2>
					<div class="why-grid">
						<div class="why-item">
							<h3>Brand Visibility</h3>
							<p>Get your brand in front of 1,000+ cloud professionals and decision-makers</p>
						</div>
						<div class="why-item">
							<h3>Lead Generation</h3>
							<p>Connect directly with potential customers actively seeking cloud solutions</p>
						</div>
						<div class="why-item">
							<h3>Thought Leadership</h3>
							<p>Position your company as an industry leader through speaking opportunities</p>
						</div>
						<div class="why-item">
							<h3>Community Impact</h3>
							<p>Support the local tech community and contribute to charity initiatives</p>
						</div>
					</div>
				</div>
			</section>

			<!-- What's Included -->
			<section class="whats-included">
				<div class="included-container">
					<h2 class="section-heading">
						<span class="heading-prefix">What's </span>
						Included
					</h2>
					<div class="included-grid">
						<div class="included-item">
							<h3>Booths</h3>
							<p>
								All booths include a table where sponsors can decorate, run competitions, and provide swag.
								Higher tier sponsors receive premium placement and interactive booths with power and internet access.
							</p>
						</div>
						<div class="included-item">
							<h3>Registration & Swag</h3>
							<p>
								Attendees receive branded swag bags and event badges at registration, giving sponsors the ability
								to scan badges for follow-up. Lego swag featuring sponsor logos is also included.
							</p>
						</div>
						<div class="included-item">
							<h3>Stages</h3>
							<p>
								Vancouver features a main stage plus multiple smaller stages. Toronto has a dedicated main stage
								for keynotes and talks. All main stage content is professionally recorded and uploaded to our channel.
							</p>
						</div>
						<div class="included-item">
							<h3>E-Sports Hackathon</h3>
							<p>
								Partnered with HackerRivals.com, we transform hackathons into entertaining sporting events with
								audience engagement. Sponsors' solutions and messaging are integrated into the event experience.
							</p>
						</div>
						<div class="included-item">
							<h3>Workshops</h3>
							<p>
								Private hands-on or guided training sessions with everything provided: registration, tables, chairs,
								screens, microphones, and a private stage for your presentations.
							</p>
						</div>
						<div class="included-item">
							<h3>Digital Signage</h3>
							<p>
								Digital displays throughout the venue showcase event maps, schedules, sponsor logos, and
								advertising videos for maximum brand visibility.
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Past Sponsors -->
			<PastSponsors content={sponsorshipSponsorsContent} />

			<!-- Sponsorship Tiers -->
			<section class="sponsorship-tiers">
				<div class="tiers-container">
					<h2 class="section-heading">
						<span class="heading-prefix">Our </span>
						Sponsorship Packages
					</h2>
					<div class="tiers-grid">
						{sponsorshipTiers.map((tier) => (
							<div class="tier-card">
								<div class="tier-header" style={`border-color: ${tier.color}`}>
									<h3 class="tier-name" style={`color: ${tier.color}`}>{tier.name}</h3>
									<p class="tier-price">{tier.price}</p>
								</div>
								<ul class="tier-benefits">
									{tier.benefits.map((benefit) => (
										<li>{benefit}</li>
									))}
								</ul>
							</div>
						))}
					</div>
				</div>
			</section>

			<!-- Contact Section -->
			<section class="contact-section" id="contact">
				<div class="contact-container">
					<h2 class="section-heading">
						<span class="heading-prefix">Get </span>
						Started
					</h2>
					<p class="contact-description">
						Ready to become a sponsor? Contact us to discuss how we can create a custom package for your organization.
					</p>
					<a href="mailto:sponsors@cloudsummit.ca" class="contact-button">
						Contact Us
					</a>
				</div>
			</section>
		</main>

		<Footer content={footerContent} />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Noto Sans', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		color: #1a1a1a;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Squada One', system-ui, sans-serif;
		font-weight: 400;
		letter-spacing: 0.02em;
	}

	body {
		min-height: 100vh;
		background: black;
		color: white;
	}
</style>

<style>
	.sponsorship-page {
		background: black;
		color: white;
	}

	/* Hero Section */
	.sponsorship-hero {
		padding: 6rem 1.5rem 4rem;
		background: black;
	}

	.hero-container {
		max-width: 900px;
		margin: 0 auto;
		text-align: center;
	}

	.hero-title {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 3rem;
		margin: 0 0 1rem 0;
		color: rgb(168, 251, 90);
	}

	.hero-subtitle {
		font-size: 1.5rem;
		margin: 0 0 1.5rem 0;
		color: white;
	}

	.hero-description {
		font-size: 1.125rem;
		line-height: 1.8;
		opacity: 0.9;
	}

	/* Sponsorship Tiers */
	.sponsorship-tiers {
		padding: 4rem 1.5rem;
	}

	.tiers-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-heading {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 2.5rem;
		text-align: center;
		margin: 0 0 3rem 0;
		color: rgb(168, 251, 90);
	}

	.heading-prefix {
		color: white;
	}

	.tiers-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.tier-card {
		background: rgba(61, 120, 171, 0.1);
		border: 1px solid rgba(61, 120, 171, 0.2);
		border-radius: 1rem;
		padding: 2rem;
		display: flex;
		flex-direction: column;
	}

	.tier-header {
		text-align: center;
		padding-bottom: 1.5rem;
		margin-bottom: 1.5rem;
		border-bottom: 2px solid;
	}

	.tier-name {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 2rem;
		margin: 0 0 0.5rem 0;
	}

	.tier-price {
		font-size: 1.5rem;
		font-weight: 600;
		color: white;
	}

	.tier-benefits {
		list-style: none;
		margin: 0;
		flex: 1;
	}

	.tier-benefits li {
		padding: 0.75rem 0;
		padding-left: 1.5rem;
		position: relative;
	}

	.tier-benefits li::before {
		content: "âœ“";
		position: absolute;
		left: 0;
		color: rgb(168, 251, 90);
		font-weight: bold;
	}

	/* What's Included */
	.whats-included {
		padding: 4rem 1.5rem;
		background: rgba(61, 120, 171, 0.05);
	}

	.included-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.included-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.included-item {
		background: rgba(61, 120, 171, 0.1);
		border: 1px solid rgba(61, 120, 171, 0.2);
		border-radius: 1rem;
		padding: 2rem;
	}

	.included-item h3 {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 1.5rem;
		margin: 0 0 0.75rem 0;
		color: rgb(168, 251, 90);
	}

	.included-item p {
		margin: 0;
		opacity: 0.9;
		line-height: 1.6;
	}

	/* Why Sponsor */
	.why-sponsor {
		padding: 4rem 1.5rem;
	}

	.why-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.why-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.why-item {
		background: rgba(61, 120, 171, 0.1);
		border: 1px solid rgba(61, 120, 171, 0.2);
		border-radius: 1rem;
		padding: 2rem;
	}

	.why-item h3 {
		font-family: 'Squada One', system-ui, sans-serif;
		font-size: 1.5rem;
		margin: 0 0 0.75rem 0;
		color: rgb(168, 251, 90);
	}

	.why-item p {
		margin: 0;
		opacity: 0.9;
		line-height: 1.6;
	}

	/* Contact Section */
	.contact-section {
		padding: 4rem 1.5rem;
	}

	.contact-container {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.contact-description {
		font-size: 1.125rem;
		margin: 0 0 2rem 0;
		opacity: 0.9;
	}

	.contact-button {
		display: inline-block;
		padding: 1rem 3rem;
		background: rgb(61, 120, 171);
		color: white;
		text-decoration: none;
		font-weight: 600;
		border-radius: 0.5rem;
		font-size: 1.125rem;
		transition: transform 0.2s, opacity 0.2s;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.contact-button:hover {
		transform: translateY(-2px);
		opacity: 0.9;
	}

	/* Desktop Styles */
	@media (min-width: 769px) {
		.sponsorship-hero {
			padding: 8rem 2rem 6rem;
		}

		.hero-title {
			font-size: 4.5rem;
		}

		.hero-subtitle {
			font-size: 2rem;
		}

		.hero-description {
			font-size: 1.25rem;
		}

		.sponsorship-tiers {
			padding: 6rem 2rem;
		}

		.section-heading {
			font-size: 4rem;
		}

		.tiers-grid {
			grid-template-columns: repeat(4, 1fr);
		}

		.whats-included {
			padding: 6rem 2rem;
		}

		.included-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 3rem;
		}

		.why-sponsor {
			padding: 6rem 2rem;
		}

		.why-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 3rem;
		}

		.contact-section {
			padding: 6rem 2rem;
		}
	}
</style>
